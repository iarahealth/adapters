{
  "name": "@iarahealth/adapters",
  "version": "0.3.1",
  "main": "./dist/adapters.umd.js",
  "module": "./dist/adapters.mjs",
  "types": "./dist/adapters.d.ts",
  "exports": {
    ".": {
      "require": "./dist/adapters.umd.js",
      "import": "./dist/adapters.mjs"
    }
  },
  "files": [
    "dist",
    "LICENSE*",
    "*.md",
    "*.json"
  ],
  "scripts": {
    "dev": "vite --host",
    "build": "tsc && vite build",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint:scripts": "eslint . --ext .ts",
    "lint:styles": "stylelint ./**/*.{css,scss}",
    "format:scripts": "prettier . --write",
    "format:styles": "stylelint ./**/*.{css,scss} --fix",
    "format": "npm run format:scripts && npm run format:styles"
  },
  "devDependencies": {
    "@laynezh/vite-plugin-lib-assets": "^0.5.24",
    "@rollup/plugin-json": "^6.1.0",
    "@types/diff": "^5.2.2",
    "@types/jsdom": "^20.0.1",
    "@types/node": "^18.11.18",
    "@types/sortablejs": "^1.15.8",
    "@types/tinymce": "^4.6.8",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "@vitest/coverage-c8": "^0.29.8",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "lint-staged": "^13.1.0",
    "postcss": "^8.4.31",
    "postcss-scss": "^4.0.6",
    "prettier": "^2.8.3",
    "stylelint": "^14.16.1",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-recommended": "^9.0.0",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "stylelint-prettier": "^3.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "vite": "^5.3.1",
    "vite-plugin-dts": "^3.9.1",
    "vitest": "^0.29.8"
  },
  "peerDependencies": {
    "@syncfusion/ej2-documenteditor": ">=26.2.11",
    "@syncfusion/ej2-locale": ">=26.2",
    "@syncfusion/ej2-ribbon": ">=26.2",
    "tinymce": ">=6.5"
  },
  "peerDependenciesMeta": {
    "@syncfusion/ej2-documenteditor": {
      "optional": true
    },
    "tinymce": {
      "optional": true
    }
  },
  "dependencies": {
    "debounce": "^2.1.1",
    "diff": "^7.0.0",
    "sortablejs": "^1.15.2",
    "uuid": "^10.0.0"
  }
}
